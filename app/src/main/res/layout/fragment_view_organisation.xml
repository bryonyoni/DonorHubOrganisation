<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Homepage.ViewOrganisation">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/org_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:src="@color/colorAccent"
                android:layout_height="200dp"/>

            <View
                android:layout_width="match_parent"
                android:alpha="0.4"
                android:background="@color/black"
                android:layout_height="200dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:paddingHorizontal="20dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/organisation_name"
                    android:layout_width="wrap_content"
                    android:text="Nairobi Community group"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:textSize="19sp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Nairobi" />

            </LinearLayout>

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="70dp"
                android:layout_marginTop="160dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/user_icon"
                android:layout_height="70dp"/>

            <ImageView
                android:id="@+id/add_avatar_image"
                android:layout_width="30dp"
                android:layout_marginTop="160dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/ic_action_photo"
                android:layout_height="30dp"/>

            <ImageView
                android:id="@+id/add_photos_image"
                android:layout_width="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_action_photo"
                android:layout_height="30dp"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingBottom="50dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="View donated items."
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:id="@+id/open_new_donation_relative"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="Continue" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:translationY="1dp"
                                android:src="@drawable/next_arrow_dark"
                                android:layout_height="17dp"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Add member to organisation."
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:id="@+id/add_organisation_relative"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="Add Member" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:translationY="1dp"
                                android:src="@drawable/next_arrow_dark"
                                android:layout_height="17dp"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="View all batches."
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:id="@+id/view_batches_relative"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center_vertical"
                                android:layout_height="wrap_content"
                                android:text="Continue" />


                            <ImageView
                                android:layout_width="20dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="5dp"
                                android:translationY="1dp"
                                android:src="@drawable/next_arrow_dark"
                                android:layout_height="17dp"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/location_container"
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="2dp"
                    android:visibility="gone"
                    app:cardCornerRadius="15dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="230dp">

                    <RelativeLayout
                        android:id="@+id/map_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/twitter_icon"
                        android:layout_height="30dp"/>

                    <TextView
                        android:id="@+id/twitter"
                        android:layout_width="wrap_content"
                        android:text="Twitter link."
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/facebook_icon"
                        android:layout_height="30dp"/>

                    <TextView
                        android:id="@+id/facebook"
                        android:layout_width="wrap_content"
                        android:text="Facebook link."
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:src="@drawable/instagram"
                        android:layout_height="30dp"/>

                    <TextView
                        android:id="@+id/instagram"
                        android:layout_width="wrap_content"
                        android:text="Instagram link."
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Activities" />

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/colorAccent"
                        android:alpha="0.5"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="1dp"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activities_recyclerview"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</FrameLayout>